{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Setup",
			"command": "python",
			"args": [ "setup.py" ],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Compile",
			"command": "cargo",
			"args": [
				"build", "--features", "debug"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Format",
			"command": "cargo",
			"args": [
				"fmt"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Generate Docs",
			"command": "cargo",
			"args": [
				"doc", "--document-private-items"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Open Docs",
			"command": "C:/Program Files (x86)/Google/Chrome/Application/chrome.exe",
			"args": [
				"${workspaceFolder}/target/doc/temportal_engine/index.html"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Run Tests",
			"command": "cargo",
			"args": [
				"test"
			],
			"problemMatcher": []
		},
		{
			"label": "Open Profiler",
			"command": "powershell",
			"args": ["./tools/Tracy/Tracy.exe"],
			"problemMatcher": []
		}
	]
}