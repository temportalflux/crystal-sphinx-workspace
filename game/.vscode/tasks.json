	"version": "2.0.0",
	"tasks": [
		{
			"label": "Crystal Sphinx - Run Game",
			"command": "cargo",
			"args": [
				"run",
				"--bin", "game",
				"--", "-v"
			],
			"options": {
				"env": {
					"RUST_BACKTRACE": "1"
				},
				"cwd": "run"
			},
			"problemMatcher": []
		},
		{
			"label": "Crystal Sphinx - Run Game (Profile)",
			"command": "cargo",
			"args": [
				"run",
				"--bin", "game",
				"--features", "profile",
				"--", "-v"
			],
			"options": {
				"env": {
					"RUST_BACKTRACE": "1"
				},
				"cwd": "run"
			},
			"problemMatcher": []
		}
	]
}